<Page x:Class="KumysnayaFermaKursach.Pages.EditOrderPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KumysnayaFermaKursach.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Оформление заказа">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>


        <StackPanel Grid.Row="0"
                    Grid.Column="0"
                    Orientation="Vertical"
                    HorizontalAlignment="Center">
            <Label Content="ФИО заказчика:"
                   FontFamily="Arial"
                   FontSize="24"
                   FontWeight="DemiBold"
                   Margin="5"/>
            <Label Content="Наименование товара:"
                   FontFamily="Arial"
                   FontSize="24"
                   FontWeight="DemiBold"
                   Margin="5"/>
            <Label Content="Количество товара:"
                   FontFamily="Arial"
                   FontSize="24"
                   FontWeight="DemiBold"
                   Margin="5"/>
            <Label Content="Способ оплаты:"
                   FontFamily="Arial"
                   FontSize="24"
                   FontWeight="DemiBold"/>
            <Label Content="Оплата только при получении:"
                   FontFamily="Arial"
                   FontSize="12"/>
            <Label Content="Дата:"
                   FontFamily="Arial"
                   FontSize="24"
                   FontWeight="DemiBold"
                   Margin="5"/>
            <Label Content="Телефон для связи:"
                   FontFamily="Arial"
                   FontSize="24"
                   FontWeight="DemiBold"
                   Margin="5"/>
            <Label Content="Сумма заказа:"
                   FontFamily="Arial"
                   FontSize="24"
                   FontWeight="DemiBold"
                   Margin="5"/>
        </StackPanel>
        <StackPanel Grid.Row="0"
                    Grid.Column="1"
                    Orientation="Vertical"
                    HorizontalAlignment="Center">
            <TextBox x:Name="FirstNameTb"
                     Height="35"
                     Width="360"
                     FontSize="22"
                     Margin="10"
                     BorderBrush="White"
                     HorizontalContentAlignment="Center"
                     VerticalContentAlignment="Center">
                <TextBox.Effect>
                    <DropShadowEffect ShadowDepth="4"
                                                  Direction="330"
                                                  Color="Black"
                                                  Opacity="0.5"
                                                  BlurRadius="4"/>
                </TextBox.Effect>
            </TextBox>
            <Label Name="NameProductLbl"
                   FontSize="22"
                   Height="35"/>
            <StackPanel Orientation="Horizontal"
                        Margin="10">
                <TextBox x:Name="AmountTb"
                         FontSize="22"
                         Height="35"
                         Width="100"
                         Margin="5"
                         TextChanged="AmountTb_TextChanged"
                         HorizontalContentAlignment="Center"
                         VerticalContentAlignment="Center"/>
                <Label FontSize="18"
                           Name="llblUnit"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal"
                        Margin="20 15 15 15">
                <CheckBox Content="Наличные"
                          Name="nalichCb"
                          IsChecked="True"/>
                <CheckBox Content="Банковская карта"
                          Name="bankKardCb"
                          Margin="15 0 0 0"/>
            </StackPanel>

            <DatePicker x:Name="DateTb"
                        Width="150"
                        Margin="15 15 15 0"
                        Text="Выберите дату"
                        HorizontalAlignment="Left"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        SelectedDateFormat="Short"/>
            <TextBlock Text="Внимание, в дальнейшем дату изменить нельзя!"
                       Margin="20 0 0 0"/>
            <TextBox x:Name="PhoneNumber"
                     Height="27"
                     FontSize="22"
                     Width="280"
                     Margin="10"
                     BorderBrush="White"
                     HorizontalAlignment="Left"
                     HorizontalContentAlignment="Center"
                     VerticalContentAlignment="Center">
                <TextBox.Effect>
                    <DropShadowEffect ShadowDepth="4"
                                                  Direction="330"
                                                  Color="Black"
                                                  Opacity="0.5"
                                                  BlurRadius="4"/>
                </TextBox.Effect>
            </TextBox>
            <Label Name="SumLbl" 
                   FontFamily="Arial"
                   Content="{Binding Sum}"
                   FontSize="20"
                   Margin="20"/>
        </StackPanel>
        <StackPanel Grid.Row="1"
                    Grid.Column="0"
                    Orientation="Vertical"
                    HorizontalAlignment="Center">
        </StackPanel>
        <StackPanel Grid.Row="1"
                    Grid.Column="1"
                    Orientation="Vertical"
                    HorizontalAlignment="Center">
            <Button HorizontalContentAlignment="Center"
                    VerticalAlignment="Center"
                    Height="45"
                    Width="250"
                    Margin="5 "
                    Background="#FFFF7A00"
                    BorderBrush="#FFFF7A00"
                    Foreground="Black"
                    FontWeight="DemiBold"
                    Content="Оформить заказ"
                    FontSize="18"
                    x:Name="createOrderBtn"
                    Click="createOrderBtn_Click">
                <Button.Effect>
                    <DropShadowEffect ShadowDepth="4"
                                                  Direction="330"
                                                  Color="Black"
                                                  Opacity="0.5"
                                                  BlurRadius="4"/>
                </Button.Effect>
            </Button>
        </StackPanel>
    </Grid>
</Page>
